<h1>Listing edges</h1>

<table>
  <tr>
	<th><b>Name</b></th>
	<th><b>Type</b></th>
	<th><b>Length</b></th>
	<th><b>Carry Capacity</b></th>
	<th><b>Base Cost (Cost per Mile)</b></th>
    <th></th>
    <th></th>
  </tr>

<% @edges.each do |edge| %>
  <tr>
	<td><%= edge.location1.coord_s %> --> <%= edge.location2.coord_s %></td>
	<td><%= edge.type.name %></td>
	<td><%= edge.length.round(2) %></td>
	<td><%= edge.carry_capacity %></td>
	<td>$<%= edge.base_cost %> <i>($<%= edge.cost_per_mile %>/mi)</i></td>
    <td><%= link_to 'Edit', edit_edge_path(edge) %></td>
    <td><%= link_to 'Destroy', edge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

