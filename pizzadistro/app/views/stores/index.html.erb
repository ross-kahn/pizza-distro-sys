<h1>Listing stores</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Location</th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
	<td><%= store.id %></td>
	<td>(<%=store.location.x%>,<%=store.location.y%>)</td>
    <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

